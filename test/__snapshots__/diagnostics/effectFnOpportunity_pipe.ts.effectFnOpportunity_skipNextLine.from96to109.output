// code fix effectFnOpportunity_skipNextLine  output for range 96 - 109
import * as Effect from "effect/Effect"
import * as Runtime from "effect/Runtime"

// @effect-diagnostics-next-line effectFnOpportunity:off
export const shouldTrigger = <A, E, R>(effect: Effect.Effect<A, E, R>) =>
  Effect.gen(function*() {
    const runtime = yield* Effect.runtime<R>()
    Runtime.runSync(runtime)(effect)

    return yield* effect.pipe(Effect.ensuring(Effect.logFatal("Hello")))
  }).pipe(Effect.withSpan("shouldTrigger"))
